{

    "manifest_version": 2,
    "name": "YouTube Clarity",
    "version": "1.0",
  
    "description": "Prevent distraction from flashy thumbnails and other clickbait tactics on YouTube.",

    "browser_action": {
      "default_title": "YouTube Clarity",
      "default_popup": "popup/popup.html"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "run_at": "document_idle",
        "js": ["main.js"],
        "css": ["lowercase.css"]
      }
    ],

    "icons": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },

    "permissions": ["storage"]
  }